<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wellcomePage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="207dp"
        android:layout_height="190dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="196dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parkit" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSignIn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="67dp"
        android:backgroundTint="#00c2cb"
        android:gravity="center"
        android:text="כניסת נהגים"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignIn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:spinning_bar_color="#468da7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSignIn2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00c2cb"
        android:gravity="center"
        android:text="כניסת נותני שירות"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignIn"
        app:spinning_bar_color="#468da7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="33dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="ברוכים הבאים!"
        android:textColor="#00c2cb"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="26dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="מציאת חניה "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="במהירות"
        android:textColor="#00c2cb"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="פשוטה!"
        android:textColor="#00c2cb"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="252dp"
        android:layout_height="30dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="מעולם לא היייתה כל כך "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="375dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:linksClickable="false"
        android:text="ParkIT היא אפליקציה שנותנת לך את היכולת למצוא את החניה הטובה ביותר בזמן הקצר ביותר, בנוסף למציאת שירותים רלוונטיים באזור שלך."
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>